{
  "manifest_version": 3,
  "name": "FastTube Downloader",
  "version": "2.1.2",
  "description": "Universal download manager with IDM-style interface - download videos, music, documents, and any file from any website",
  "browser_specific_settings": {
    "gecko": {
      "id": "fasttube@local",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "nativeMessaging",
    "downloads",
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}