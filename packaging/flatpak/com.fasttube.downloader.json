{
  "app-id": "com.fasttube.downloader",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "fasttube-downloader",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "fasttube-downloader",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 packaging/launch-wrapper.sh /app/bin/fasttube-downloader",
        "mkdir -p /app/opt/FastTubeDownloader",
        "rsync -a --exclude '.git' --exclude 'dist' --exclude '__pycache__' --exclude 'packaging' . /app/opt/FastTubeDownloader/",
        "install -Dm644 packaging/fasttube-downloader.desktop /app/share/applications/fasttube-downloader.desktop",
        "install -Dm644 icon128.png /app/share/icons/hicolor/128x128/apps/fasttube-downloader.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}
